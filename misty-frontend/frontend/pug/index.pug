extends ./components/layout.pug

block title
    - var titlePage = "Misty - Home"

block content
    .c-banner
        .c-banner__waves
        .c-banner__mouse
            img(src="./images/img-mouse.png", title="Mouse", alt="Mouse")
        .c-banner__slider.js-banner
            .c-banner__item
                img.c-banner__item__people(src="./images/bg-people.png", title="People", alt="People")
                .c-banner__item__bg.c-banner__item__bg--img1
                .c-banner__item__caption.c-banner__item__caption--slider1
                    p Fashion Boy
                    h1 AUTUMN WINTER
                    b 2017/18
                    a.c-button.c-button__white Shop Now
            .c-banner__item
                .c-banner__item__bg.c-banner__item__bg--img2
                .c-banner__item__caption.c-banner__item__caption--slider2
                    p Welcome To StyleShop
                    h1 FLASH SALE OFF <span>70%</span>
                    a.c-button.c-button__white.c-button__white--active Shop Now
            .c-banner__item
                .c-banner__item__bg.c-banner__item__bg--img3
                .c-banner__item__caption.c-banner__item__caption--slider3
                    div.c-banner__item__caption--slider3-middle
                        p SALE 50% OFF
                        h1 END OF SEASON
                        a.c-button.c-button__white.c-button__white--active Shop Now
    .container
        .c-special.js-special
            .c-special__item
                .c-special__img
                    img(src="./images/img-discount.jpg", title="Product", alt="Product")
                .c-special__description
                    .c-special__title Special Offers
                    h2.c-special__name Deal of the week
                    .c-special__rating
                        .c-special__rating__star
                            i.fa.fa-star
                            i.fa.fa-star
                            i.fa.fa-star
                            i.fa.fa-star
                            i.fa.fa-star-o
                        .c-special__rating__id Item #248LS
                    .c-special__hr
                    .c-special__content What you wear is how you present yourself to the world, especially today, when human contacts are so quick. Fashion is instant language.
                    .c-special__price
                        span.c-special__price__default $45.00
                        del.c-special__price__off $100.00
                    .c-clock.js-countdown
                        .c-clock__item
                            .c-clock__times
                                .c-clock__times__number.js-countdown__days
                                .c-clock__times__text Days
                        .c-clock__item
                            .c-clock__times
                                .c-clock__times__number.js-countdown__hours
                                .c-clock__times__text Hrs
                        .c-clock__item
                            .c-clock__times
                                .c-clock__times__number.js-countdown__mins
                                .c-clock__times__text Mins
                        .c-clock__item
                            .c-clock__times
                                .c-clock__times__number.js-countdown__secs
                                .c-clock__times__text Secs
            .c-special__item
                .c-special__img
                    img(src="./images/img-discount2.jpg", title="Product", alt="Product")
                .c-special__description
                    .c-special__title Special Offers
                    h2.c-special__name Deal of the week
                    .c-special__rating
                        .c-special__rating__star
                            i.fa.fa-star
                            i.fa.fa-star
                            i.fa.fa-star
                            i.fa.fa-star
                            i.fa.fa-star-o
                        .c-special__rating__id Item #248LS
                    hr.c-special__hr
                    .c-special__content What you wear is how you present yourself to the world, especially today, when human contacts are so quick. Fashion is instant language.
                    .c-special__price
                        span.c-special__price__default $45.00
                        del.c-special__price__off $100.00
                    .c-clock.js-countdown
                        .c-clock__item
                            .c-clock__times
                                .c-clock__times__number.js-countdown__days
                                .c-clock__times__text Days
                        .c-clock__item
                            .c-clock__times
                                .c-clock__times__number.js-countdown__hours
                                .c-clock__times__text Hrs
                        .c-clock__item
                            .c-clock__times
                                .c-clock__times__number.js-countdown__mins
                                .c-clock__times__text Mins
                        .c-clock__item
                            .c-clock__times
                                .c-clock__times__number.js-countdown__secs
                                .c-clock__times__text Secs



        

